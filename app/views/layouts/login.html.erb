<body>
  <div class="container">
  <div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Log in</h2>
  </div>
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(:session, url: api_v1_login_path) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <%= f.submit "Log in", class: "btn btn-primary form-control" %>

  <% end %>
  </div>
   </div>
  </div>
